{
  "compilerOptions": {
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./build",
    "rootDir": "./",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["/**/*"],
  "exclude": ["node_modules"]
}
